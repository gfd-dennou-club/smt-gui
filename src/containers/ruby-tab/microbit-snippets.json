{
    "microbit.when_button_pressed": {
        "snippet": "microbit.when_button_pressed(\"A\") do\n\t${2}\nend",
        "description": "ボタン (A▼) が押されたとき",
        "type": "event"
    },
    "microbit.button_pressed?": {
        "snippet": "microbit.button_pressed?(\"A\")",
        "description": "ボタン (A▼) が押された",
        "type": "method"
    },
    "microbit.when": {
        "snippet": "microbit.when(\"moved\") do\n\t${2}\nend",
        "description": "(動いた▼) とき",
        "type": "event"
    },
    "microbit.display_text": {
        "snippet": "microbit.display_text(\"こんにちは!\")",
        "description": "(こんにちは!) を表示する",
        "type": "method"
    },
    "microbit.display": {
        "snippet": "microbit.display(\n  \"${1:.1.1.}\",\n  \"${2:1.1.1}\",\n  \"${3:1...1}\",\n  \"${4:.1.1.}\",\n  \"${5:..1..}\"\n)",
        "description": "(♡▼) を表示する",
        "type": "method"
    },
    "microbit.when_tilted": {
        "snippet": "microbit.when_tilted(\"any\") do\n\t${2}\nend",
        "description": "(どれかの向き▼) に傾いたとき",
        "type": "event"
    },
    "microbit.tilted?": {
        "snippet": "microbit.tilted?(\"any\")",
        "description": "(どれかの向き▼) に傾いた",
        "type": "method"
    },
    "microbit.tilt_angle": {
        "snippet": "microbit.tilt_angle(\"front\")",
        "description": "(前▼) 方向の傾き",
        "type": "method"
    },
    "microbit.when_pin_connected": {
        "snippet": "microbit.when_pin_connected(${1:0}) do\n\t${2}\nend",
        "description": "ピン (0▼) がつながったとき",
        "type": "event"
    }
}